-var str = static.sections.education

h2 #{str.title}
.education
	.left-col
		h3 #{str.studies}
		.studies.card
			each study in studies
				.study
					.study-time #{study.time}
					.study-text
						.study-title #{study.title}
						.study-desc #{study.text}
		h3 #{str.languages}
		.langues.card
			.langue
				span.flag-icon.flag-icon-fr
				.langue-name Français
				.langue-level
					i.fa.fa-circle
					i.fa.fa-circle
					i.fa.fa-circle
					i.fa.fa-circle
					i.fa.fa-circle
			.langue
				span.flag-icon.flag-icon-gb
				.langue-name English
				.langue-level
					i.fa.fa-circle
					i.fa.fa-circle
					i.fa.fa-circle
					i.fa.fa-circle
					i.fa.fa-circle
			.langue
				span.flag-icon.flag-icon-de
				.langue-name Deutsch
				.langue-level
					i.fa.fa-circle
					i.fa.fa-circle
					i.fa.fa-circle
					i.fa.fa-circle-o
					i.fa.fa-circle-o
			.langue
				span.flag-icon.flag-icon-cn
				.langue-name 中文 (#{str.chinese})
				.langue-level
					i.fa.fa-circle
					i.fa.fa-circle-o
					i.fa.fa-circle-o
					i.fa.fa-circle-o
					i.fa.fa-circle-o
	.right-col
		h3 #{str.jobs}
		.jobs.card
			each job in jobs
				if job.title
					.job
						.job-header
							.job-title #{job.title}
							.job-logo
								if job.logo
									img(src="/assets/images/logo/" + job.logo, alt=job.title)
								else
									i.fa(class= job.icon)
						.job-subtitle #{job.subtitle}
						.job-desc #{job.text}
