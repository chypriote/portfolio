mixin project(project, id)
	.project(data-id=id)
		img(src="/assets/images/projects/" + project.img, alt=project.name)
		.info
			.title #{project.name}
			p #{project.subtitle}
			button.btn-project #{str.more}
		- jsonProject = JSON.stringify(project)
		script proj["#{id}"] = !{jsonProject};

-var str = static.sections.projects

script proj = []
h2 #{str.title}
if str.subtitle
	h4.small #{str.subtitle}
.projects
	each project, id in projects
		+project(project, id)
